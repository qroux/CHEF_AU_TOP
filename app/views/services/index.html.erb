<div class="container">
  <% @services.each do |service| %>
    <div class="card-container">
      <img src="<%= cl_image_path service.picture%>" class="card-media">
      <div class="card-body">
        <span class="card-author subtle">
          <img id="chef" src="https://kitt.lewagon.com/placeholder/users/ssaunier" alt=""> <%= service.user.first_name %>
        </span>
        <h2 class="card-title"><%= link_to service.menu_name, service_path(service) %></h2>
        <% if policy(service).destroy? %>
        <%= link_to "delete", service_path(service),
        method: :delete,
        data: { confirm: "are you sure ?"}  %>
        <% end %>
      </div>
  </div>
<% end %>
</div>
