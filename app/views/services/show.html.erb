<div class="container">
  <div class="col-xs-12 text-center heading show-from-sm">
    <div class="service-container">
      <div class="">
        <div id="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @service.picture, height: 300, width: 700, crop: :fill %>);">
          <span class="menu-name-show">
            <%= @service.menu_name %>
          </span>
        </div>
      <div class="service-menu">
        <h4><strong> Chef  <%= @service.user.first_name %> <%= @service.user.last_name %> </strong></h4>
        <div>
          <div class="card-info"><p><strong><%= "Categorie:   " %></strong> <br><%= @service.category %></p></div>
          <div class="card-info"><p><strong><%= "Description du menu:   " %></strong> <br><%= @service.menu %></p></div>
          <div class="card-info"><p> <strong><%= "Date:   " %></strong> <br> <%= @service.date %></p></div>
          <div class="card-info"><p> <strong><%= "midi/soir:   " %> </strong><br><%= @service.shift %></p></div>
          <div class="card-info"><p><strong><%= "Prix par personne:   " %> </strong> <br><%=  @service.price %>â‚¬</p></div>
          <div class="card-info"><strong><p><%= "Nombre de couverts:   " %></strong><br> <%=  @service.max_quantity %></p></div>
          <% if @service.bookings.length == 0 %>
          <div class="card-info"><p> Disponible </p></div>
          <% else %>
          <div><p>Pas Disponible</p></div>
          <% end %>
      </div>
      <div class="col-xs-12">
        <% if @service.bookings.length == 0 %>
        <div class="" id="reservation">
          <h1>Faire une reservation</h1>
          <%= simple_form_for [@service, @booking] do |f| %>
          <%= f.input :place, label: "Mon adresse" %>
          <%= f.input :quantity, collection: (1..@service.max_quantity), label: "Nombre de convive" %>
          <%= f.button :submit %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
