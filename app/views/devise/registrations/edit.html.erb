<div class = "container-fluid">
  <div class = "title">
    <h1>Modifier mon profil</h1>
  </div>
  <div class = my_edit_form>
    <div class = "flex-item">
      <div class = "big_avatar">
        <%= cl_image_tag current_user.avatar, height: 300, width: 400, crop: :fill, crop: :thumb, gravity: :face, :class => "big_avatar" %>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :avatar %>
        <%= f.input :avatar_cache, as: :hidden %>
        <%= f.input :current_password, label: "Mot de passe actuel",
        hint: "Nous avons besoin de votre mot de passe actuel pour effectuer les modifications",
        required: true,
        input_html: { autocomplete: "current-password" } %>
      </div>
    </div>
    <div class= "flex-item-2">
      <div class="personal_information">
        <h2> Mes informations personnelles </h2>
      </div>
      <div class="form-informations">
        <%= f.input :email, required: true, autofocus: true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :first_name, label: "PrÃ©nom"%>
        <%= f.input :last_name, label: "Nom de Famille"%>
      </div>
      <div class="form-passwords">
        <%= f.input :password, label: "Nouveau mot de passe",
        hint: "Ne remplissez pas ce champs si vous ne voulez pas modifier votre mot de passe",
        required: false,
        input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, label: "Confirmez le mot de passe",
        required: false,
        input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
      <% end %>
      <div class="cancel_account">
        <h3>Supprimer mon compte</h3>
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
